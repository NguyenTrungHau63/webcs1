@model IEnumerable<WebCosmeticsStore.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a class="btn btn-dark" asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Images)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                   @if (item.Images != null && item.Images.Any())
                    {
                        <img src="~/images/@item.Images.First().Url" alt="Product Image" style="max-width: 150px; max-height: 200px;" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Update" asp-route-id="@item.ProductId" class="btn btn-secondary">View</a>
                        <a asp-action="Detail" asp-route-id="@item.ProductId" class="btn btn-secondary">Detail</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-secondary">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
