@model WebCosmeticsStore.ViewsModels.VMHomeC

@{
    ViewData["Title"] = "Index";
    
}
<div class="p-b-10">
	<h3 class="ltext-103 cl5">
		Product Overview
	</h3>
</div>

<div class="flex-w flex-sb-m p-b-52">

		<div class="flex-w flex-l-m filter-tope-group m-tb-10">
			@foreach (var cateogory in Model.Categories)
			{
				<a class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" asp-action="Index" asp-controller="Home" asp-route-id ="@cateogory.Id">
					@cateogory.Name
				</a>
			}
		</div>

	

	<div class="flex-w flex-c-m m-tb-10">
		<div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
			<i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
			<i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
			Filter
		</div>

		<div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
			<i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
			<i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
			Search
		</div>
	</div>

	<!-- Search product -->
	<form method="post">
		<div class="dis-none panel-search w-full p-t-10 p-b-15">
			<div class="bor8 dis-flex p-l-15">
				<button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04" asp-action="SearchBox" asp-controller="Product">
					<i class="zmdi zmdi-search"></i>
				</button>

				<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="value" placeholder="Search">
			</div>
		</div>
	</form>

	<!-- Filter -->
	<div class="dis-none panel-filter w-full p-t-10">
		<div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
			<div class="filter-col1 p-r-15 p-b-27">
				<div class="mtext-102 cl2 p-b-15">
					Sort By
				</div>

				<ul>
					<li class="p-b-6">
						<a asp-action="Sorting" asp-controller="Product" asp-area="default" asp-route-type="1" class="filter-link stext-106 trans-04">
							Default
						</a>
					</li>


					<li class="p-b-6">
						<a asp-action="Sorting" asp-controller="Product" asp-area="default" asp-route-type="2" class="filter-link stext-106 trans-04">
							Price: Low to High
						</a>
					</li>

					<li class="p-b-6">
						<a asp-action="Sorting" asp-controller="Product" asp-area="default" asp-route-type="3" class="filter-link stext-106 trans-04">
							Price: High to Low
						</a>
					</li>
				</ul>
			</div>

			<div class="filter-col2 p-r-15 p-b-27">
				<div class="mtext-102 cl2 p-b-15">
					Price
				</div>

				<ul>
					<li class="p-b-6">
						<a href="#" class="filter-link stext-106 trans-04 filter-link-active">
							All
						</a>
					</li>

					<li class="p-b-6">
						<a href="#" class="filter-link stext-106 trans-04">
							$0.00 - $50.00
						</a>
					</li>

					<li class="p-b-6">
						<a href="#" class="filter-link stext-106 trans-04">
							$50.00 - $100.00
						</a>
					</li>

					<li class="p-b-6">
						<a href="#" class="filter-link stext-106 trans-04">
							$100.00 - $150.00
						</a>
					</li>

					<li class="p-b-6">
						<a href="#" class="filter-link stext-106 trans-04">
							$150.00 - $200.00
						</a>
					</li>

					<li class="p-b-6">
						<a href="#" class="filter-link stext-106 trans-04">
							$200.00+
						</a>
					</li>
				</ul>
			</div>


		</div>
	</div>
</div>

<div class="row isotope-grid">
	@if(Model.Products.Count() > 16)
	{
		@for (int i = 0; i < 16; i++)
		{
			<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
				<!-- Block2 -->

				<div class="block2">
					<div class="block2-pic hov-img0">
						<img src="~/images/@Model.Products.ElementAt(i).ImageUrl" alt="IMG-PRODUCT">

						<a href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
							Quick View
						</a>
					</div>

					<div class="block2-txt flex-w flex-t p-t-14">
						<div class="block2-txt-child1 flex-col-l ">
							<a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
								@Model.Products.ElementAt(i).Name
							</a>

							<span class="stext-105 cl3">
								@String.Format("{0:N0} VND", Model.Products.ElementAt(i).Price)

							</span>
						</div>

						<div class="block2-txt-child2 flex-r p-t-3">
							<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
								<img class="icon-heart1 dis-block trans-04" src="~/layout/images/icons/icon-heart-01.png" alt="ICON">
								<img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/layout/images/icons/icon-heart-02.png" alt="ICON">
							</a>
						</div>
					</div>
				</div>
			</div>
		}
	}
	else
	{
		@foreach (var product in Model.Products)
		{
			<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
				<!-- Block2 -->

				<div class="block2">
					<div class="block2-pic hov-img0">
						<img src="~/images/@product.ImageUrl" alt="IMG-PRODUCT">

						<a href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
							Quick View
						</a>
					</div>

					<div class="block2-txt flex-w flex-t p-t-14">
						<div class="block2-txt-child1 flex-col-l ">
							<a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
								@product.Name
							</a>

							<span class="stext-105 cl3">
								@String.Format("{0:N0} VND", @product.Price)

							</span>
						</div>

						<div class="block2-txt-child2 flex-r p-t-3">
							<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
								<img class="icon-heart1 dis-block trans-04" src="~/layout/images/icons/icon-heart-01.png" alt="ICON">
								<img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/layout/images/icons/icon-heart-02.png" alt="ICON">
							</a>
						</div>
					</div>
				</div>
			</div>
		}
	}

	

</div>
<!-- Load more -->
<div class="flex-c-m flex-w w-full p-t-45">
	<a asp-action="Index" asp-controller="Product" asp-area="default" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
		Load More
	</a>
</div>

